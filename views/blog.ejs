    <script>
        // Process the content after the page loads
        document.addEventListener('DOMContentLoaded', function() {
            const blogContentElement = document.getElementById('blogContent');
            const processedContent = processContent(blogContentElement.innerHTML);
            blogContentElement.innerHTML = processedContent;
        });
    </script>
