<%- include('partials/Header') %>

    <main class="font-[Onest]">
      <%- include('partials/menu') %>
     
      <!-- About Tourista -->
      <section>
        
          <div class="flex flex-col">
            <div class="md:py-30 mt-10 flex justify-start px-10 py-1">
              <svg xmlns="http://www.w3.org/2000/svg" width="96" height="96" viewBox="0 0 24 24" fill="none" stroke="#8A52BA" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-grip -mt-4" opacity="0.16">
                <circle cx="12" cy="5" r="1" />
                <circle cx="19" cy="5" r="1" />
                <circle cx="5" cy="5" r="1" />
                <circle cx="12" cy="12" r="1" />
                <circle cx="19" cy="12" r="1" />
                <circle cx="5" cy="12" r="1" />
                <circle cx="12" cy="19" r="1" />
                <circle cx="19" cy="19" r="1" />
                <circle cx="5" cy="19" r="1" />
              </svg>
              <h1 class="-ml-11 mt-5 text-3xl font-bold md:text-4xl">Countries We Cover</h1>
            </div>
            <div class="px-14 py-4">
              <div x-data="{
                searchQuery: '',
                get filteredCountries() {
                  return this.searchQuery.length < 2
                    ? this.$store.countryData.countries
                    : this.$store.countryData.countries.filter(country => 
                        country.title.toLowerCase().includes(this.searchQuery.toLowerCase())
                      );
                }
              }" x-init="$store.countryData.init()">
                <!-- Search box -->
                <div class="mb-6">
                  <label for="country-search" class="block text-sm font-medium text-gray-700 mb-2">Search:</label>
                  <input
                    id="country-search"
                    type="text"
                    x-model="searchQuery"
                    placeholder="Search countries..."
                    class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:border-transparent"
                  >
                </div>

                <!-- Country grid -->
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                  <template x-for="country in filteredCountries" :key="country.id">
                    <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                      <div class="p-6">
                        <div class="flex items-center mb-4">
                          <div class="w-12 h-12 rounded-full overflow-hidden mr-4 flex-shrink-0">
                            <img :src="country.flag" :alt="country.title + ' flag'" class="w-full h-full object-cover">
                          </div>
                          <h2 class="text-xl font-semibold text-gray-800" x-text="country.title"></h2>
                        </div>
                        <p class="text-sm text-gray-600 mb-2">
                          <span class="font-medium">Continent:</span>
                          <span x-text="country.continent"></span>
                        </p>
                        <p class="text-sm text-gray-600">
                          <span class="font-medium">Visa Method:</span>
                          <span x-text="country.visaMethod"></span>
                        </p>
                      </div>
                    </div>
                  </template>
                </div>
              </div>
            </div>
          </div>
        
      </section>

      <!-- Why Tourista End -->

      <!-- Bottom Starts -->
      <%- include('partials/Bottom') %>
      <!-- Bottom Ends -->
    </main>

<script src="public/js/countries.js"></script>
<%- include('partials/Footer') %>

